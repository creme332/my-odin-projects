rules_version = '2';
service cloud.firestore {
    match /databases/{database}/documents {
        match /users/{userEmail} {

            // Allow a user to read/modify his own document
            allow read, update, create: if (request.auth != null) && request.auth.token.email == userEmail;

            // deletes are not allowed
            allow delete: if false;
        }
    }
}